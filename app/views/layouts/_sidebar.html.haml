.slidebar
  .slidebar__top
    .slidebar__top__content
      %h3.name
        = current_user.name
      %ul.fa
        %a{href: "/groups/new"}
          = fa_icon("edit")
        %a{href: "/users/edit"}
          = fa_icon("cog")
  .slidebar__middle__content
    - if @groups.present?
      = render "groups/group", local:{groups: @groups}
