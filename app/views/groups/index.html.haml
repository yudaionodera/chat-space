%header
.contents
  //ひだりのバー
  .div
    .slidebar
      .slidebar__top
        .slidebar__top__content
          %p.name
            = current_user.name
        = fa_icon("edit")
        = fa_icon("cog")
      .slidebar__middle__content
      = @groups.each do |user_group|
        %p.chat-group__name
          = user_group.user.name
          %p.p3 まだメッセージはありません
      .slidebar__bottom__content
  .main__contents
    .main__contents__header
      .main__contents__header__edit
        %h1.s1 edit
      .main__contents__header__top-group
        %p.p3 Sampleグループ
    .main__contents__header__top-member
      MEMBER
      %i.i4 Onodera Yuudai
    = render 'messages/messages'
    .main__contents__third
    .main__contents__footer
      .main__contents__footer__form
        .main__contents__footer-body
          %form{:action => "/",:method => "post"}
            %label{:for => "name"}
          %input{:type => "text",:placeholder => "Type a message"}
            = fa_icon("file-picture-o")
        %input{:type =>"submit",:name =>"commit",:value =>"Send",:class=>"submit",:data-disable-with =>"Send"}
